#!/bin/bash

#> [ns]=cert-manager

cat <<EOF | kubectl apply -f -
apiVersion: v1
kind: Namespace
metadata:
  name: $NS
---
apiVersion: helm.cattle.io/v1
kind: HelmChart
metadata:
  name: cert-manager
  namespace: $NS
spec:
  repo: https://charts.jetstack.io
  chart: cert-manager
  targetNamespace: $NS
  valuesContent: |-
    crds:
      enabled: true
EOF

sleep 30s
cat <<EOF | kubectl apply -n $NS -f -
---
apiVersion: v1
kind: Secret
metadata:
  name: cloudflare-api-key-secret
type: Opaque
stringData:
  api-key: ${CF_API_KEY}
---
apiVersion: cert-manager.io/v1
kind: ClusterIssuer
metadata:
  name: acme
spec:
  acme:
    email: ${CF_API_EMAIL}
    server: https://acme-v02.api.letsencrypt.org/directory
    privateKeySecretRef:
      name: acme
    solvers:
    - dns01:
        cloudflare:
          email: ${CF_API_EMAIL}
          apiKeySecretRef:
            name: cloudflare-api-key-secret
            key: api-key
EOF